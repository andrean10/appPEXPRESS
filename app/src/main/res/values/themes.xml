<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PEXpressCustomer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:colorBackground">@color/bg_gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="homeAsUpIndicator">@drawable/ic_back</item>
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
        <item name="bottomSheetDialogTheme">@style/ModalBottomSheetDialog</item>
    </style>

    // bottom sheet dialog style

    <style name="ModalBottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheet</item>
    </style>

    <style name="ModalBottomSheet" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>

    <style name="Theme.PEXpressCustomer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AppPickupCustomer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AppPickupCustomer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.Pickup.Headline6</item>
        <item name="titleCentered">true</item>
        <item name="navigationIconTint">@color/black</item>
        <item name="titleTextColor">@color/primaryTextColorLight</item>
    </style>

    <style name="TextAppearance.Pickup.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BgBottomNav" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">@drawable/bottom_nav_bg_corner</item>
        <item name="android:paddingTop">@dimen/dimen_8</item>
        <item name="android:paddingBottom">@dimen/dimen_8</item>
    </style>

    <style name="Title" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/primaryTextColorLight</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="PrimaryTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/primaryTextColorLight</item>
    </style>

    <style name="PrimaryTextStyle.Light" parent="PrimaryTextStyle">
        <item name="android:fontFamily">@font/poppins_light</item>
    </style>

    <style name="PrimaryTextStyle.Regular" parent="PrimaryTextStyle">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="PrimaryTextStyle.Medium" parent="PrimaryTextStyle">
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="PrimaryTextStyle.SemiBold" parent="PrimaryTextStyle">
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="SecondaryTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/secondaryTextColorDark</item>
    </style>

    <style name="SecondaryTextStyle.Light" parent="PrimaryTextStyle">
        <item name="android:fontFamily">@font/poppins_light</item>
    </style>

    <style name="SecondaryTextStyle.Regular" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="SecondaryTextStyle.Medium" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="SecondaryTextStyle.SemiBold" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="PrimaryTextButtonStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/primaryTextColorLight</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="TitleMenuItem" parent="Title">
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="TextButtonOnboarding" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/primaryTextColorLight</item>
        <item name="android:padding">@dimen/dimen_20</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="ButtonOnboarding" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/primaryTextColorLight</item>
        <item name="android:padding">@dimen/dimen_16</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/primaryTextColorLight</item>
        <item name="android:paddingStart">@dimen/dimen_12</item>
        <item name="android:paddingEnd">@dimen/dimen_12</item>
        <item name="android:paddingTop">@dimen/dimen_16</item>
        <item name="android:paddingBottom">@dimen/dimen_16</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="cornerRadius">@dimen/dimen_16</item>
    </style>

    <style name="CustomOutlineButton" parent="Widget.MaterialComponents.Button.OutlinedButton">

    </style>

    <style name="CustomOutlinedEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" />

    <style name="CustomOutlinedEditText.Corner" parent="CustomOutlinedEditText">
        <item name="boxCornerRadiusTopStart">@dimen/dimen_16</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dimen_16</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/dimen_16</item>
        <item name="boxCornerRadiusBottomStart">@dimen/dimen_16</item>
    </style>

    <style name="CustomOutlinedEditText.Corner2" parent="CustomOutlinedEditText">
        <item name="boxCornerRadiusTopStart">@dimen/dimen_8</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dimen_8</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/dimen_8</item>
        <item name="boxCornerRadiusBottomStart">@dimen/dimen_8</item>
    </style>

    <style name="CustomOutlinedEditText.Corner2.DropDown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxCornerRadiusTopStart">@dimen/dimen_8</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dimen_8</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/dimen_8</item>
        <item name="boxCornerRadiusBottomStart">@dimen/dimen_8</item>
    </style>

    <style name="CustomOutlinedTIDropdown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">#2E2300</item>
        <item name="boxCornerRadiusTopStart">@dimen/dimen_16</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dimen_16</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/dimen_16</item>
        <item name="boxCornerRadiusBottomStart">@dimen/dimen_16</item>
    </style>

    <style name="CustomButtonText" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomMenuCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/backgroundLight</item>
        <item name="cardCornerRadius">@dimen/dimen_12</item>
        <item name="cardElevation">@dimen/dimen_2</item>
    </style>

    <style name="CustomTextInputEditText">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:padding">@dimen/dimen_16</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>