        <item name="android:textColor">@color/primaryDarkColor</item>
    </style>

    <style name="PriceTextStyle.SemiBold">
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="PriceBackgroundStyle">
