<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingStart="@dimen/dimen_32"
    android:paddingTop="@dimen/dimen_16"
    android:paddingEnd="@dimen/dimen_32"
    android:paddingBottom="@dimen/dimen_16">

    <TextView
        android:id="@+id/tv_name_item_size"
        style="@style/PrimaryTextStyle.Medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/dimen_12"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Small" />

    <TextView
        android:id="@+id/tv_dimension_size"
        style="@style/SecondaryTextStyle.Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_4"
        android:ellipsize="end"
        android:maxLines="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_name_item_size"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_item_size"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Panjang: 20 cm\nLebar: 20 cm\nTinggi: 20 cm" />

    <TextView
        android:id="@+id/tv_weight_max"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tv_dimension_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_dimension_size"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Berat Max: 5" />

</androidx.constraintlayout.widget.ConstraintLayout>