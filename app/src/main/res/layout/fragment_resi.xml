<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.main.status_order.resi.ResiFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_back"
        app:title="Resi" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/layout_receipt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/receipt"
            style="@style/BgResi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_32"
            android:layout_marginTop="@dimen/dimen_16"
            android:layout_marginEnd="@dimen/dimen_32"
            app:cardBackgroundColor="@color/bg_gray"
            app:cardCornerRadius="@dimen/dimen_12">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dimen_32"
                android:paddingTop="@dimen/dimen_32"
                android:paddingEnd="@dimen/dimen_32"
                android:paddingBottom="@dimen/dimen_48"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar"
                app:layout_constraintVertical_bias="0.0">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/placeholder_logo_pexpresss"
                    android:src="@drawable/pexpress_dark"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_jenis_layanan"
                    style="@style/PrimaryTextStyle.Regular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:gravity="center"
                    android:textColor="@color/primaryTextColorLight"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView"
                    tools:text="Jenis Layanan" />

                <TextView
                    android:id="@+id/tv_no_resi"
                    style="@style/PrimaryTextStyle.Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_4"
                    android:gravity="center"
                    android:drawablePadding="@dimen/dimen_4"
                    android:textColor="@color/primaryTextColorLight"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_jenis_layanan"
                    tools:text="PEX2022021700041"
                    app:drawableEndCompat="@drawable/ic_copy_text" />

<!--                <ImageView-->
<!--                    android:id="@+id/btn_copy_text"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginStart="@dimen/dimen_4"-->
<!--                    android:src="@drawable/ic_copy_text"-->
<!--                    app:layout_constraintEnd_toEndOf="parent"-->
<!--                    app:layout_constraintHorizontal_bias="0.5"-->
<!--                    app:layout_constraintStart_toEndOf="@+id/tv_no_resi"-->
<!--                    app:layout_constraintTop_toTopOf="@+id/tv_no_resi" />-->

                <View
                    android:id="@+id/line_resi"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:background="@drawable/line_resi"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_no_resi" />

                <TextView
                    android:id="@+id/placeholder_resi_tanggal"
                    style="@style/PrimaryTextStyle.Regular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:text="@string/resi_tanggal"
                    android:textColor="@color/primaryTextColorLight"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/line_resi" />

                <TextView
                    android:id="@+id/tv_tanggal_transaction"
                    style="@style/PrimaryTextStyle.Regular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_12"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:gravity="end"
                    android:textColor="@color/primaryTextColorLight"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/placeholder_resi_tanggal"
                    app:layout_constraintTop_toBottomOf="@+id/line_resi"
                    tools:text="2022-02-17 08:19" />

                <TextView
                    android:id="@+id/placeholder_resi_pengirim"
                    style="@style/PrimaryTextStyle.Regular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_4"
                    android:text="@string/resi_pengirim"
                    android:textColor="@color/primaryTextColorLight"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/placeholder_resi_tanggal" />

                <TextView
                    android:id="@+id/tv_nama_pengirim"
                    style="@style/PrimaryTextStyle.Regular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_12"
                    android:layout_marginTop="@dimen/dimen_4"
                    android:gravity="end"
                    android:textColor="@color/primaryTextColorLight"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/placeholder_resi_pengirim"
                    app:layout_constraintTop_toBottomOf="@+id/tv_tanggal_transaction"
                    tools:text="Ranti" />

                <TextView
                    android:id="@+id/placeholder_resi_telpon"
                    style="@style/PrimaryTextStyle.Regular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_4"
                    android:text="@string/resi_telpon"
                    android:textColor="@color/primaryTextColorLight"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_nama_pengirim" />

                <TextView
                    android:id="@+id/tv_telpon_pengirim"
                    style="@style/PrimaryTextStyle.Regular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_12"
                    android:layout_marginTop="@dimen/dimen_4"
                    android:gravity="end"
                    android:textColor="@color/primaryTextColorLight"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/placeholder_resi_telpon"
                    app:layout_constraintTop_toBottomOf="@+id/tv_nama_pengirim"
                    tools:text="085320707984" />

                <TextView
                    android:id="@+id/placeholder_resi_asal"
                    style="@style/PrimaryTextStyle.Regular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_4"
                    android:text="@string/resi_asal"
                    android:textColor="@color/primaryTextColorLight"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_telpon_pengirim" />

                <TextView
                    android:id="@+id/tv_asal_pengirim"
                    style="@style/PrimaryTextStyle.Regular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_32"
                    android:gravity="end"
                    android:textColor="@color/primaryTextColorLight"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/placeholder_resi_asal"
                    app:layout_constraintTop_toTopOf="@+id/placeholder_resi_asal"
                    tools:text="Cilandak, Kota Jakarta Selatan, Daerah Khusus Ibukota Jakarta" />

                <View
                    android:id="@+id/line_resi2"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:background="@drawable/line_resi"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_asal_pengirim" />

                <TextView
                    android:id="@+id/placeholder_resi_penerima"
                    style="@style/PrimaryTextStyle.Regular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:text="@string/resi_penerima"
                    android:textColor="@color/primaryTextColorLight"
