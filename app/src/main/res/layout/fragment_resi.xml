                    style="@style/PrimaryTextStyle.Regular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_4"
                    android:text="@string/resi_telpon"
                    android:textColor="@color/primaryTextColorLight"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_nama_penerima" />

                <TextView
                    android:id="@+id/tv_telpon_penerima"
                    style="@style/PrimaryTextStyle.Regular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_12"
                    android:gravity="end"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/placeholder_resi_telpon_penerima"
                    app:layout_constraintTop_toTopOf="@+id/placeholder_resi_telpon_penerima"
                    tools:text="081286126617" />

                <TextView
                    android:id="@+id/placeholder_resi_alamat_penerima"
                    style="@style/PrimaryTextStyle.Regular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_4"
                    android:text="@string/resi_alamat_penerima"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_telpon_penerima" />

                <TextView
                    android:id="@+id/tv_alamat_penerima"
                    style="@style/PrimaryTextStyle.Regular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_4"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/placeholder_resi_alamat_penerima"
                    tools:text="Jagakarsa, Kota Jakarta Selatan, Daerah Khusus Ibukota Jakarta" />

                <View
                    android:id="@+id/line_resi3"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:background="@drawable/line_resi"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_alamat_penerima" />

                <TextView
                    android:id="@+id/placeholder_resi_berat"
                    style="@style/PrimaryTextStyle.Regular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:text="@string/resi_ukuran"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/line_resi3" />

                <TextView
                    android:id="@+id/tv_berat"
                    style="@style/PrimaryTextStyle.Regular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_12"
                    android:gravity="end"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/placeholder_resi_berat"
                    app:layout_constraintTop_toTopOf="@+id/placeholder_resi_berat"
                    tools:text="Medium (2 Kg)" />

                <TextView
                    android:id="@+id/placeholder_jenis_barang"
                    style="@style/PrimaryTextStyle.Regular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_4"
                    android:text="@string/resi_jenis_barang"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_berat" />

                <TextView
                    android:id="@+id/tv_jenis_barang"
                    style="@style/PrimaryTextStyle.Regular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_12"
                    android:gravity="end"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/placeholder_jenis_barang"
                    app:layout_constraintTop_toTopOf="@+id/placeholder_jenis_barang"
                    tools:text="Makanan Kering" />

                <TextView
                    android:id="@+id/placeholder_catatan_pengirim"
                    style="@style/PrimaryTextStyle.Regular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_4"
                    android:text="@string/resi_catatan"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_jenis_barang" />

                <TextView
                    android:id="@+id/tv_catatan_pengiriman"
                    style="@style/PrimaryTextStyle.Regular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_32"
                    android:gravity="end"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/placeholder_catatan_pengirim"
                    app:layout_constraintTop_toTopOf="@+id/placeholder_catatan_pengirim"
                    tools:text="Barang-nya dijaga baik-baik ya" />

                <TextView
                    android:id="@+id/placeholder_resi_ongkir"
                    style="@style/PrimaryTextStyle.SemiBold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:text="@string/resi_tarif"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_catatan_pengiriman" />

                <TextView
                    android:id="@+id/tv_ongkir"
                    style="@style/PrimaryTextStyle.SemiBold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_12"
                    android:gravity="end"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/placeholder_resi_ongkir"
                    app:layout_constraintTop_toTopOf="@+id/placeholder_resi_ongkir"
                    tools:text="Rp. 25.000" />

                <ImageView
                    android:id="@+id/img_barcode_resi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_32"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/placeholder_barcode_resi"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/guideline_barcode2"
                    app:layout_constraintStart_toStartOf="@+id/guideline_barcode"
                    app:layout_constraintTop_toBottomOf="@+id/tv_ongkir"
                    tools:background="@color/black" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_barcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="70dp" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_barcode2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_end="70dp" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>
    </androidx.core.widget.NestedScrollView>

