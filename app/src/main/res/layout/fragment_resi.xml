                <TextView
                    android:id="@+id/tv_nama_penerima"
                    style="@style/PrimaryTextStyle.Regular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_12"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:gravity="end"
                    android:textColor="@color/primaryTextColorLight"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/placeholder_resi_penerima"
                    app:layout_constraintTop_toBottomOf="@+id/line_resi2"
                    tools:text="Indah" />

                <TextView
