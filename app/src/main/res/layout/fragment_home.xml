<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.main.home.HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_status_order"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/materialCardView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:cardCornerRadius="@dimen/dimen_2"
                app:layout_constraintBottom_toTopOf="@+id/gd_slider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.smarteist.autoimageslider.SliderView
                        android:id="@+id/sliderView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:sliderAnimationDuration="600"
                        app:sliderAutoCycleDirection="right"
                        app:sliderIndicatorAnimationDuration="600"
                        app:sliderIndicatorGravity="bottom|center"
                        app:sliderIndicatorMargin="15dp"
                        app:sliderIndicatorOrientation="horizontal"
                        app:sliderIndicatorPadding="3dp"
                        app:sliderIndicatorRadius="2dp"
                        app:sliderIndicatorSelectedColor="@color/tab_indicator_active"
                        app:sliderIndicatorUnselectedColor="@color/tab_indicator_inactive"
                        app:sliderScrollTimeInSec="4"
                        app:sliderStartAutoCycle="true" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/layout_uncompleted_profile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_32"
                android:layout_marginTop="@dimen/dimen_32"
                android:layout_marginEnd="@dimen/dimen_32"
                android:visibility="gone"
                app:cardBackgroundColor="#FFE4E9"
                app:cardCornerRadius="@dimen/dimen_16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/materialCardView"
                tools:visibility="visible">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/dimen_16"
                    android:paddingTop="@dimen/dimen_6"
                    android:paddingEnd="@dimen/dimen_16"
                    android:paddingBottom="@dimen/dimen_6">

                    <TextView
                        android:id="@+id/placeholder_uncompleted_profile"
                        style="@style/PrimaryTextStyle.Regular"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/dimen_8"
                        android:text="@string/home_profil_anda_belum_lengkap"
                        android:textColor="@color/primaryTextColorLight"
                        android:textSize="12sp"
                        app:drawableStartCompat="@drawable/ic_uncompleted_profile"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/btn_completing_profile"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_completing_profile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/home_lengkapi"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        app:backgroundTint="#CF1F3F"
                        app:cornerRadius="@dimen/dimen_8"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/dummy_layanan_home"
                style="@style/PrimaryTextStyle.SemiBold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_32"
                android:layout_marginTop="@dimen/dimen_20"
                android:text="@string/home_title_layanan"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_uncompleted_profile" />

            <ImageView
                android:id="@+id/menu_tarif_flat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_32"
                android:layout_marginTop="@dimen/dimen_12"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:contentDescription="@string/home_icon"
                android:focusable="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dummy_layanan_home"
                app:srcCompat="@drawable/ic_tarif_flat" />

            <ImageView
                android:id="@+id/menu_tarif_kilometer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:contentDescription="@string/home_icon"
                android:focusable="true"
                app:layout_constraintBottom_toBottomOf="@+id/menu_tarif_flat"
                app:layout_constraintEnd_toStartOf="@+id/gd_menu_vertical2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/gd_menu_vertical"
                app:layout_constraintTop_toTopOf="@+id/menu_tarif_flat"
                app:srcCompat="@drawable/ic_tarif_kilometer" />

            <ImageView
                android:id="@+id/menu_pex_cargo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_12"
                android:layout_marginEnd="@dimen/dimen_32"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:contentDescription="@string/home_icon"
                android:focusable="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dummy_layanan_home"
                app:srcCompat="@drawable/ic_pex_chargo" />

            <TextView
                android:id="@+id/textView"
                style="@style/PrimaryTextStyle.Medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_4"
                android:gravity="center"
                android:text="@string/home_tarif_flat"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/menu_tarif_flat"
                app:layout_constraintStart_toStartOf="@+id/menu_tarif_flat"
                app:layout_constraintTop_toBottomOf="@+id/menu_tarif_flat" />

            <TextView
                android:id="@+id/placeholder_kilometer"
                style="@style/PrimaryTextStyle.Medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_4"
                android:gravity="center"
                android:text="@string/home_tarif_kilometer"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@+id/gd_menu_vertical2"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/gd_menu_vertical"
                app:layout_constraintTop_toBottomOf="@+id/menu_tarif_kilometer" />

            <TextView
                android:id="@+id/placeholder_pex_cargo"
                style="@style/PrimaryTextStyle.Medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_4"
                android:gravity="center"
                android:text="@string/home_pex_chargo"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/gd_menu_vertical2"
                app:layout_constraintTop_toBottomOf="@+id/menu_pex_cargo" />

            <ImageView
                android:id="@+id/menu_mitra"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_32"
                android:layout_marginTop="@dimen/dimen_32"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:contentDescription="@string/home_icon"
                android:focusable="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:srcCompat="@drawable/ic_mitra" />

            <TextView
                android:id="@+id/placeholder_mitra"
                style="@style/PrimaryTextStyle.Medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_4"
                android:gravity="center"
                android:text="@string/home_mitra"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/menu_mitra"
                app:layout_constraintStart_toStartOf="@+id/menu_mitra"
                app:layout_constraintTop_toBottomOf="@+id/menu_mitra" />

            <ImageView
                android:id="@+id/menu_cek_tarif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:contentDescription="@string/home_icon"
                android:focusable="true"
                app:layout_constraintEnd_toStartOf="@+id/gd_menu_vertical2"
                app:layout_constraintStart_toStartOf="@+id/gd_menu_vertical"
                app:layout_constraintTop_toTopOf="@+id/menu_mitra"
                app:srcCompat="@drawable/ic_cek_tarif" />

            <TextView
                android:id="@+id/placeholder_cek_tarif"
                style="@style/PrimaryTextStyle.Medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_4"
                android:gravity="center"
                android:text="@string/home_cek_tarif"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@+id/gd_menu_vertical2"
                app:layout_constraintStart_toStartOf="@+id/gd_menu_vertical"
                app:layout_constraintTop_toBottomOf="@+id/menu_cek_tarif" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gd_slider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="200dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gd_menu_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="139dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gd_menu_vertical2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="139dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_status_order"
        style="@style/CustomButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_32"
        android:layout_marginEnd="@dimen/dimen_32"
        android:layout_marginBottom="@dimen/dimen_24"
        android:text="@string/home_status_order"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

